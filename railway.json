{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn app:app --bind 0.0.0.0:$PORT --timeout 600 --workers 1 --threads 2 --worker-class sync",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300
  }
}
